<Page x:Class="Admin.Pages.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Admin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin">

    <Grid Background="#FF3A886B">
        <Button Content="Выйти"
               Click="Btn_Viti"
                HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="Btn_ProsM" Width="250" Content="Просмотр сотрудников" Margin="0,0,0,15" Background="#FF6253F6" Height="30"/>
            <Button Click="Btn_DoMat" Width="250" Content="Просмотр справочника" Margin="0,0,0,15" Background="#FF6253F6" Height="30"/>
            <Button Click="Btn_DoMen" Width="250" Content="Добавление сотрудника" Margin="0,0,0,15" Background="#FF6253F6" Height="30"/>
            
        </StackPanel>
    </Grid>
</Page>
